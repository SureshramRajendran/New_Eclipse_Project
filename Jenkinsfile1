pipeline {
    agent any {
        stages {
            stage ('build')
            steps {
                bat 'python -V'
            }
        }
    }
    post {
        always{
            echo'Always'
        }
        success {
            echo 'Only on Success'
        }
        failure {
            echo 'Only on Failure'
        }
        unstable {
            echo 'Only if run is unstable'
        }
        changed {
            echo 'Only if status changed from Success to failure or vice versa w.r.t. last run.'
        }
    }
}
